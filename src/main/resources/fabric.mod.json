{
  "schemaVersion": 1,
  "id": "craftingpp",
  "version": "${version}",

  "name": "Crafting++",
  "description": "Fabric mod of Crafting++\nRewrite from datapack of Crafting++",
  "authors": [
    "Phoupraw",
    "Cjsah",
    "ruhuasiyu"
  ],
  "contact": {
    "homepage": "http://www.cjsah.net/ruhuasiyu/",
    "sources": "https://github.com/cjsah/cpp-fabric"
  },

  "license": "GPL-3.0",
  "icon": "assets/cpp/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.cpp.Craftingpp"
    ],
    "client": [
      "net.cpp.CraftingppClient"
    ],
    "modmenu": [
      "net.cpp.config.CppModMenu"
    ]
  },
  "mixins": [
    "cpp.mixins.json"
